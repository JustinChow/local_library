<%- include('./header') %> 
<%- include('./sidebar') %>

<div class="col-sm-10">
    <h1>Genre: <%= genre.name %> </h1>

    <div style='margin-left:20px;margin-top:20px'>
        <h4>Books</h4>
        <dl>
            <% if (genre_books.length == 0) { %>
                <p>This genre has no books.</p>
            <% } else { %>
                <% for( let index = 0; index < genre_books.length; index++ ) { %>
                    <dt>
                        <a href='<%= genre_books[index].url %>'><%= genre_books[index].title %> </a>
                    </dt>
                    <dd>
                        <%= genre_books[index].summary %> 
                    </dd>
                <% } %>
            <% } %>
        </dl>

   </div>

</div>

<%- include('./footer') %>