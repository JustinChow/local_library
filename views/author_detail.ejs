<%- include('./header') %> 
<%- include('./sidebar') %>

<div class="col-sm-10">
    <h1>Author: <%= author.name %> </h1>

    <p><%= author.lifespan %></p>

    <div style='margin-left:20px;margin-top:20px'>
        <h4>Books</h4>

        <dl>
            <% if (author_books.length == 0) { %>
                <p>This author has no books.</p>
            <% } else { %>
                <% for( let i = 0; i < author_books.length; i++ ) { %>
                    <% let book = author_books[i] %> 
                    <dt>
                        <a href='<%= book.url %>'><%= book.title %> </a>
                    </dt>
                    <dd>
                        <%= book.summary %> 
                    </dd>
                <% } %>
             
            <% } %>
        </dl>
    </div>

    <hr>
    <p>
        <a href='<%= author.url+"/delete" %>'>Delete Author</a>
    </p>

</div>

<%- include('./footer') %>