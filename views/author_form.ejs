<%- include('./header') %> 
<%- include('./sidebar') %>

<div class="col-sm-10">
    <h1>Genre: <%= title %> </h1>

    <form method='POST' action=''>
        <div class='form-group'>
            <label for='first_name'>First Name:</label>
            <input id='first_name' class=form-control type='text' placeholder='John' 
                name='first_name' required='true' value='<%= locals.author === undefined ? '' : author.first_name %>'>
            <label for='family_name'>Family Name:</label>
            <input id='family_name' class='form-control' type='text' placeholder='Doe'
                name='family_name' required='true' value='<%= locals.author === undefined ? '' : author.family_name %>'>
        </div>
        <div class='form-group'>
            <label for='date_of_birth'>Date of birth:</label>
            <input id='date_of_birth' class='form-control' type='date' name='date_of_birth'
                value='<%= locals.author === undefined ? '' : author.date_of_birth %>'>
            <label for='date_of_death'>Date of death:</label>
            <input id='date_of_death' class='form-control' type='date' name='date_of_death'
                value='<%= locals.author === undefined ? '' : author.date_of_death %>'>
        </div>
        <button class='btn btn-primary' type='submit'>Submit</button>
    </form>

    <% if (locals.errors) { %> 
        <ul>
            <% for( let i = 0; i < errors.length; i++ ) { %>
                <li><%- errors[i].msg %> </li>
            <% } %> 
        </ul>
    <% } %>

</div>

<%- include('./footer') %>